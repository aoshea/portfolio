{
  "name": "portfolio",
  "version": "0.0.2",
  "description": "Porfolio for Alastair O'Shea",
  "main": "index.js",
  "engines": {
    "node": "10.15.1"
  },
  "scripts": {
    "csslint": "stylelint ./src/css/main.css",
    "prebuild:css": "npm run csslint",
    "minify": "uglifyjs build/public/assets/js/script.js -c --screw-ie8 -m -o build/public/assets/js/script.min.js",
    "build:css": "postcss --use autoprefixer --autoprefixer.browsers 'last 2 versions' src/css/main.css -o  build/public/assets/css/style.css",
    "build:watchcss": "onchange 'src/css/**/*.css' -- npm run build:css",
    "jslint": "eslint ./src/js/**/*.js --cache",
    "prebuild:js": "npm run jslint",
    "build:folder": "mkdirp build",
    "build:copy": "cp src/html/index.html build/index.html",
    "build:js": "babel src/js -d build/public/assets/js && npm run minify",
    "build:watchjs": "onchange 'src/js/**/*.js' -- npm run build:js",
    "build:watch": "npm run build:watchjs & npm run build:watchcss",
    "build": "npm run build:folder && npm run build:copy && npm run build:js && npm run build:css",
    "livereload": "livereload build/ -w 1000 -d",
    "server:copy": "cp src/server/index.js build/index.js",
    "server:run": "nodemon build/index.js",
    "server": "npm run server:copy && npm run server:run",
    "start": "npm run build && npm-run-all --parallel livereload build:watch server",
    "test": "tape tests/*.js",
    "dev": "parcel src/index.html",
    "prod": "parcel build src/index.html",
    "lint": "stylelint src/styles.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aoshea/portfolio.git"
  },
  "author": "Alastair O'Shea <alastair.oshea@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aoshea/portfolio/issues"
  },
  "homepage": "https://github.com/aoshea/portfolio#readme",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "parcel-bundler": "^1.12.2",
    "postcss-modules": "^1.4.1",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.0.0",
    "typescript": "^3.3.4000"
  }
}
